@model WasteMVC.Models.Waste

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Waste</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WasteType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WasteType.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SalePrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
        <dt>Socios</dt>
        <dd></dd>
        <dt>
            @foreach (var item in Model.Partners)
            {

                <dt>Nombre</dt>
                <dd>@item.Person.FullName</dd>
                <dt>Porcentaje</dt>
                <dd>
                    @Html.DisplayFor(modelItem => item.Percentage)
                </dd>
            }
        </dl>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
