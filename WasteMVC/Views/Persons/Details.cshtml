@model WasteMVC.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Business)
        </dt>
        <dd>
            <table class="table table-hover table-striped">
                <tr>
                    <th>Negocio</th>
                    <th>Porcentaje</th>
                </tr>
                @foreach (var item in Model.Business)
                {
                    <tr>
                        <td>
                            Tipo: @Html.DisplayFor(modelItem => item.Waste.WasteType.Description)
                        </td>
                        <td rowspan="4" class="success text-center">
                            @Html.DisplayFor(modelItem => item.Percentage)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Percio de Venta :@Html.DisplayFor(modelItem => item.Waste.SalePrice)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Peso: @Html.DisplayFor(modelItem => item.Waste.Weight)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Dia: @Html.DisplayFor(modelItem => item.Waste.DateTime)
                        </td>
                    </tr>

                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
